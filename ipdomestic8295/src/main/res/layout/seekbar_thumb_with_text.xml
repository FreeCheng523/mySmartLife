<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:ignore="ResourceName">

    <TextView
        android:id="@+id/thumb_text"
        android:layout_width="@dimen/ip_dp_54"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"
        android:text="60"
        android:fontFamily="@font/deepal_fz_variable_yjh_l2"
        android:textColor="@color/swith_thumb_tint_day"
        android:lineHeight="@dimen/ip_dp_21"
        android:textSize="@dimen/ip_sp_18" />

    <ImageView
        android:id="@+id/thumb_selector"
        android:layout_width="@dimen/ip_dp_54"
        android:layout_height="@dimen/ip_dp_28"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/ip_dp_15"
        android:src="@drawable/prompt" />

    <ImageView
        android:id="@+id/thumb_main_icon"
        android:layout_width="@dimen/ip_dp_18"
        android:layout_height="@dimen/ip_dp_45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/ip_dp_18"
        android:layout_marginTop="@dimen/ip_dp_39"
        android:src="@drawable/slide_block" />


</androidx.constraintlayout.widget.ConstraintLayout>