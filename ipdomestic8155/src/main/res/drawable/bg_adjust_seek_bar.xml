<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background"
        android:height="@dimen/ip_dp_17"><!--整体高度值-->
        <shape >
            <corners android:radius="@dimen/ip_dp_8"/>
            <solid android:color="@color/ip_light_progress_bar_fill_color_end"/>
            <stroke
                android:width="1px"
                android:color="@color/a1_white"/>
        </shape>
    </item>

    <item
        android:id="@android:id/progress"
        android:height="@dimen/ip_dp_17"><!--进度高度值-->
        <!--
            android:insetTop=：距离滚动框上部高度
            android:insetRight="@dimen/ip_dp_2"
            android:insetBottom="@dimen/ip_dp_5"
        -->
        <!-- 增加左右 inset 确保 thumb 有足够空间 -->
        <inset android:insetLeft="2dp">
            <clip>
                <shape>
                    <corners android:radius="@dimen/ip_dp_15"/>
                    <gradient
                        android:angle="0"
                        android:endColor="@color/ip_light_progress_bar_fill_color_end"
                        android:startColor="@color/ip_light_progress_bar_fill_color_start"/>
                </shape>
            </clip>
        </inset>

    </item>
</layer-list>
