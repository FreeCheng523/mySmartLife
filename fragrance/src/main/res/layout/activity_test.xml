<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:paddingTop="@dimen/dp_500"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FragranceBleManager 测试"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="16dp" />

        <!-- 状态显示 -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="状态: 未初始化"
            android:textSize="14sp"
            android:padding="8dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- 扫描区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫描设备"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnStartScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开始扫描"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnStopScan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="停止扫描" />
        </LinearLayout>

        <!-- 扫描结果列表 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="扫描到的设备:"
            android:textSize="14sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvDevices"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#F5F5F5" />

        <!-- 连接区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设备连接"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etMacAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="设备MAC地址"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnConnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="连接"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDisconnect"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="断开" />
        </LinearLayout>

        <!-- 控制命令区域 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="控制命令"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- 电源控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPowerOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="开机"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnPowerOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关机" />
        </LinearLayout>

        <!-- 模式控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnModeStandby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="待机"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnModeA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="香型A"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnModeB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="香型B" />
        </LinearLayout>

        <!-- 档位控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnGearLow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="低档"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnGearMedium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="中档"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnGearHigh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="高档" />
        </LinearLayout>

        <!-- 灯光控制 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="灯光控制"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnLightOff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关闭"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnLightBreath"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="呼吸"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnLightRhythm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="律动" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnLightFlow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="流动"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnLightAlwaysOn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="常亮" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etLightColorR"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="R (0-255)"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLightColorG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="G (0-255)"
                android:inputType="number"
                android:padding="8dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLightColorB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="B (0-255)"
                android:inputType="number"
                android:padding="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSetLightColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置灯光颜色"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etLightBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="亮度 (0-100)"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSetLightBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置亮度"
            android:layout_marginBottom="16dp" />

        <!-- 其他控制 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnRestoreFactory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="恢复出厂"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSetCarStartStop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="随车启停" />
        </LinearLayout>

        <EditText
            android:id="@+id/etTimingDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="定时时长(分钟): 5,10,30,40,50,60,90,120"
            android:inputType="number"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnSetTiming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="设置定时"
            android:layout_marginBottom="8dp" />

        <!-- 查询命令 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询命令"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnGetVersion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取版本"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnGetStatus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="获取状态" />
        </LinearLayout>

        <!-- 日志显示 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="日志"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#F5F5F5">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="日志将显示在这里..."
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:padding="8dp" />
        </ScrollView>

    </LinearLayout>
</ScrollView>

