    <FrameLayout
        android:background="@drawable/shape_btn_bg_small"
        android:id="@+id/add_device"
        android:layout_width="@dimen/dp_760"
        android:layout_height="@dimen/dp_456"
        android:layout_marginTop="@dimen/dp_444"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/add_device_icon"
            android:layout_width="@dimen/dp_105"
            android:layout_height="@dimen/dp_105"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/dp_40"
            android:src="@drawable/ic_add_white" />

        <TextView
            android:id="@+id/add_device_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_device"
            android:textSize="@dimen/sp_40"
            android:textColor="@color/white"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="@dimen/dp_74"
            android:fontFamily="@font/deepal_fz_variable_yjh_l2"
            />

    </FrameLayout>
    <LinearLayout
        android:id="@+id/tv_no_device_lin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        app:layout_constraintTop_toBottomOf="@+id/add_device"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:textSize="@dimen/sp_40"
            android:id="@+id/home_empty_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_device_tips"
            android:textColor="@color/white"
            android:fontFamily="@font/deepal_fz_variable_yjh_l2"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recyclerview"
        android:scrollbars="none"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingStart="@dimen/dp_100"
        android:paddingEnd="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/add_device_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_marginTop="@dimen/dp_36" />


</androidx.constraintlayout.widget.ConstraintLayout>