<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">

    <ImageView
        android:id="@+id/thumb_main_icon"
        android:layout_width="@dimen/ip_dp_36"
        android:layout_height="@dimen/ip_dp_36"
        android:src="@drawable/ip_light_progress_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/ip_dp_10"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/thumb_selector"
        android:layout_width="@dimen/ip_dp_56"
        android:layout_height="@dimen/ip_dp_40"
        android:src="@mipmap/light_progress_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thumb_main_icon" />

    <TextView
        android:id="@+id/thumb_text"
        android:layout_width="@dimen/ip_dp_56"
        android:layout_height="@dimen/ip_dp_55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thumb_main_icon"
        android:layout_marginTop="@dimen/ip_dp_10"
        android:gravity="center_horizontal"
        android:text="@string/value_default"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/ip_general_text_color"
        android:textSize="@dimen/ip_sp_21" />

</androidx.constraintlayout.widget.ConstraintLayout>