<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/dialog_container"
            android:layout_width="1600px"
            android:layout_height="960px"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:background="@drawable/dialog_container">

                <!-- 使用ViewPager2来承载不同选项卡的内容 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:layout_marginTop="0dp"
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />

                <!--    相对布局-->
<!--                <RelativeLayout-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="160px">-->

                        <ImageView
                            android:id="@+id/dialog_back"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_marginStart="48px"
                            android:layout_marginTop="48px"
                            android:background="@drawable/dialog_back" />

                        <ImageView
                            android:id="@+id/dialog_set"
                            android:layout_width="64px"
                            android:layout_height="64px"
                            android:layout_marginStart="1488px"
                            android:layout_marginTop="48px"
                            android:background="@drawable/dialog_set" />

<!--                </RelativeLayout>-->
        </RelativeLayout>

</RelativeLayout>