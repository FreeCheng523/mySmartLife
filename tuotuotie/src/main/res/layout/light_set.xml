<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/dialog_container"
        android:layout_width="1600px"
        android:layout_height="960px"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/dialog_container">

        <!--    相对布局-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px">

            <ImageView
                android:id="@+id/link_back"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_marginStart="48px"
                android:layout_marginTop="48px"
                android:background="@drawable/link_back" />

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/title_center"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:text="设置"
                android:textStyle="bold"
                android:textSize="40px"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="68px"
                android:layout_height="68px"
                android:layout_toEndOf="@id/title_center"
                android:layout_centerVertical="true"
                android:src="@drawable/set_tips_icon"/>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="1600px"
                android:layout_height="800px"
                android:layout_marginTop="160px"
                android:overScrollMode="always"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="100px"
                    android:paddingBottom="100px"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="1400px"
                        android:layout_height="116px"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        android:layout_marginBottom="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="116px"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:padding="0dp">

                                <TextView
                                    android:id="@+id/textTitle1"
                                    android:layout_width="wrap_content"
                                    android:textColor="#fff"
                                    android:layout_height="wrap_content"
                                    android:textSize="40px"
                                    android:textStyle="bold"
                                    android:text="防误触" />

                                <ImageView
                                    android:id="@+id/swich_icon1"
                                    android:layout_marginTop="3px"
                                    android:layout_width="68px"
                                    android:layout_height="68px"
                                    android:src="@drawable/set_tips_icon"/>
                            </LinearLayout>
                        <ImageView
                            android:id="@+id/autoBrightnessSwitch"
                            android:layout_width="114px"
                            android:layout_height="96px"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:src="@drawable/switch_off" />
                    </LinearLayout>
                    <!-- 半透明遮罩层 -->

                    <!-- 预设颜色区域 -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="116px"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        android:layout_marginBottom="16dp">
                            <TextView
                                android:id="@+id/textTitle2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#fff"
                                android:text="LED灯颜色设置"
                                android:gravity="center_vertical"
                                android:textSize="40px"
                                android:textStyle="bold" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/swich_icon2"
                                android:layout_marginTop="3px"
                                android:layout_width="68px"
                                android:layout_height="68px"
                                android:src="@drawable/set_tips_icon"/>
                    </LinearLayout>

                    <!-- 颜色预览区域 -->
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/colorPreview"
                        android:background="#FF0000"
                        android:layout_marginBottom="30px">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="当前颜色"
                            android:textSize="18sp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="色相: 0°"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvHueValue"
                            android:visibility="gone"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="HEX: #FF0000"
                            android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/tvHexValue"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1400px"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="40px"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/colorButton1"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color1"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="0"/>

                        <TextView
                            android:id="@+id/colorButton2"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color2"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="30"/>

                        <TextView
                            android:id="@+id/colorButton3"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color3"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="60"/>

                        <TextView
                            android:id="@+id/colorButton4"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color4"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="120"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1400px"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="40px"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/colorButton5"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color5"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="240"/>

                        <TextView
                            android:id="@+id/colorButton6"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color6"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="300"/>

                        <TextView
                            android:id="@+id/colorButton7"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color7"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="180"/>

                        <TextView
                            android:id="@+id/colorButton8"
                            android:layout_width="0dp"
                            android:layout_height="110px"
                            android:layout_weight="1"
                            android:background="@drawable/block_border_color8"
                            android:layout_marginEnd="40px"
                            android:layout_marginBottom="32px"
                            android:tag="286"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1440px"
                        android:layout_height="60px"
                        android:orientation="vertical"
                        android:paddingStart="20px"
                        android:paddingEnd="20px"
                        android:layout_marginBottom="26px">
                        <com.zkjd.lingdong.libs.GradientSeekBar
                            android:id="@+id/seekBarHue"
                            android:layout_width="1360px"
                            android:layout_height="60px"
                            android:max="360"
                            android:progress="0"
                            android:thumb="@drawable/seekbar_thumb"
                            android:paddingStart="30px"
                            android:paddingEnd="30px" />
                    </LinearLayout>

                    <!-- 色相控制区域 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="110px"
                        android:layout_marginBottom="8px"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="操控音效设置"
                            android:textSize="40px"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- 预设颜色区域 -->

                    <LinearLayout
                        android:layout_width="1400px"
                        android:layout_height="110px"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        android:layout_marginBottom="8px">

                        <TextView
                            android:layout_width="240px"
                            android:layout_height="wrap_content"
                            android:textColor="#fff"
                            android:textSize="40px"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="音效开关" />

                        <ImageView
                            android:id="@+id/autoBrightnessSwitch1"
                            android:layout_width="114px"
                            android:layout_height="96px"
                            android:layout_gravity="center_vertical"
                            android:clickable="true"
                            android:src="@drawable/switch_off" />
<!--                        <com.zkjd.lingdong.libs.SwitchButtonView-->
<!--                            android:id="@+id/switch_voice"-->
<!--                            android:layout_width="50dp"-->
<!--                            android:layout_height="30dp"-->
<!--                            app:checked="true"-->
<!--                            app:backgroundOnColor="#FF4CD964"-->
<!--                            app:backgroundOffColor="#FFE9E9E9"-->
<!--                            app:buttonColor="#FFFFFFFF"-->
<!--                            app:borderColor="#FFCCCCCC"-->
<!--                            app:borderWidth="1dp"/>-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabContainer"
                        android:background="@drawable/button_tab_bg"
                        android:layout_width="1400px"
                        android:layout_height="96px"
                        android:orientation="horizontal"
                        android:showDividers="middle"
                        android:padding="8px">

                        <TextView
                            android:id="@+id/tab1"
                            android:layout_width="0dp"
                            android:layout_height="80px"
                            android:layout_marginEnd="16px"
                            android:layout_weight="1"
                            android:background="@drawable/tab_button_selector"
                            android:gravity="center"
                            android:textSize="32px"
                            android:textStyle="bold"
                            android:text="灵动"
                            android:textColor="@drawable/tab_text_color"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tab2"
                            android:layout_width="0dp"
                            android:layout_height="80px"
                            android:layout_marginEnd="16px"
                            android:layout_weight="1"
                            android:background="@drawable/tab_button_selector"
                            android:gravity="center"
                            android:textSize="32px"
                            android:textStyle="bold"
                            android:text="水滴"
                            android:textColor="@drawable/tab_text_color"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tab3"
                            android:layout_width="0dp"
                            android:layout_height="80px"
                            android:layout_weight="1"
                            android:background="@drawable/tab_button_selector"
                            android:gravity="center"
                            android:textSize="32px"
                            android:textStyle="bold"
                            android:text="气泡"
                            android:textColor="@drawable/tab_text_color"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>


                </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</RelativeLayout>