<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="466px"
    android:layout_height="96px"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:padding="8px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 图标背景圆圈 -->
        <RelativeLayout
            android:background="@drawable/tabs_choose"
            android:layout_width="450px"
            android:layout_height="80px">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_button_type_icon"
                android:layout_width="450px"
                android:layout_height="80px"
                android:layout_gravity="center"
                android:src="@drawable/ic_touch_app"
                android:contentDescription="按钮类型图标"
                tools:src="@drawable/ic_touch_app" />
            <TextView
                android:id="@+id/tv_button_type_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="短按"
                android:textSize="32px"
                android:textColor="@color/text_primary"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                tools:text="短按" />
        </RelativeLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
