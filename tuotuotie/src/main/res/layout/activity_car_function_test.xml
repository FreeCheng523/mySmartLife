<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未执行"
            android:textSize="16sp" />

        <!-- 基础功能按钮 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 基础功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTrunk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="后备箱开关 [需配置字]" />

        <!-- 儿童锁功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 儿童锁功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnChildLockLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="左儿童锁开关 [标配]" />

        <Button
            android:id="@+id/btnChildLockRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="右儿童锁开关 [标配]" />

        <!-- 座椅功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 座椅功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSteeringHeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="方向盘加热 [需配置字]" />

        <Button
            android:id="@+id/btnMainSeatHeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="主驾座椅加热 [需配置字]" />

        <Button
            android:id="@+id/btnCopilotSeatHeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="副驾座椅加热 [需配置字]" />

        <Button
            android:id="@+id/btnLeftVentToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="主驾座椅通风 [需配置字]" />

        <Button
            android:id="@+id/btnRightVentToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="副驾座椅通风 [需配置字]" />

        <!-- 按摩功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 按摩功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMassageIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="按摩强度调节 [未在config.xml中配置]" />

        <Button
            android:id="@+id/btnMassageMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="按摩模式切换 [未在config.xml中配置]" />

        <!-- 空调功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 空调功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAirConditioning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="空调开关 [标配]" />

        <Button
            android:id="@+id/btnTempUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="温度升高 [标配]" />

        <Button
            android:id="@+id/btnTempDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="温度降低 [标配]" />

        <Button
            android:id="@+id/btnFanUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="风量增加 [标配]" />

        <Button
            android:id="@+id/btnFanDown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="风量减少 [标配]" />

        <Button
            android:id="@+id/btnWindDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="吹风方向 [标配]" />

        <!-- 除霜功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 除霜功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDefrostToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="除霜开关 [标配]" />

        <Button
            android:id="@+id/btnDefrost1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="前挡除霜 [标配]" />

        <Button
            android:id="@+id/btnDefrost2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="后挡除霜 [标配]" />

        <!-- 驾驶功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 驾驶功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDrivingMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="驾驶模式 [标配]" />

        <Button
            android:id="@+id/btnEnergyManage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="能量管理 [需配置字]" />

        <!-- 车身功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 车身功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTailWingPos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="尾翼位置 [需配置字]" />

        <Button
            android:id="@+id/btnMirrorFold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="后视镜折叠 [需配置字]" />

        <Button
            android:id="@+id/btnWiperMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="雨刮模式 [没有]" />

        <!-- 屏幕功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 屏幕功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCopilotScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="副驾屏幕调节 [标配]" />

        <!-- 小憩模式 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 小憩模式 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRestLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="主驾小憩模式 [没有]" />

        <Button
            android:id="@+id/btnRestRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="副驾小憩模式 [没有]" />

        <!-- 安全功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 安全功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPedestrianAlert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="低速行人报警音 [标配]" />

        <Button
            android:id="@+id/btnSeatBeltRear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="后排安全带报警 [标配]" />

        <!-- 老板键功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 老板键功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBossKeyLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="老板键(逆时针) [需配置字]" />

        <Button
            android:id="@+id/btnBossKeyRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="老板键(顺时针) [需配置字]" />

        <Button
            android:id="@+id/btnBossKeyPress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="老板键(按压) [需配置字]" />

        <!-- 旋转调节功能 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="=== 旋转调节功能 ==="
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnTemp1Left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="主驾温度(逆时针) [标配]" />

        <Button
            android:id="@+id/btnTemp1Right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="主驾温度(顺时针) [标配]" />

        <Button
            android:id="@+id/btnTemp2Left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="副驾温度(逆时针) [标配]" />

        <Button
            android:id="@+id/btnTemp2Right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="副驾温度(顺时针) [标配]" />

        <Button
            android:id="@+id/btnFanSpeedLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="风量调节(逆时针) [标配]" />

        <Button
            android:id="@+id/btnFanSpeedRight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="风量调节(顺时针) [标配]" />

    </LinearLayout>

</ScrollView>


