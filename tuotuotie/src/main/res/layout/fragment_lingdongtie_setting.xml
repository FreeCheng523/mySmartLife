<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.setting.LingDongtieSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--    相对布局-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px">

            <TextView
                android:id="@+id/title_center"
                android:layout_weight="1"
                android:layout_width="600px"
                android:layout_marginStart="500px"
                android:gravity="center"
                android:text="设置"
                android:textSize="40px"
                android:textColor="#ffffff"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <!-- LED灯控制区域 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LED灯控制"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 模式选择 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="模式选择："
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_gravity="center_vertical" />

                    <RadioGroup
                        android:id="@+id/rg_led_mode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="8dp">

                        <RadioButton
                            android:id="@+id/rb_connected_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工作模式"
                            android:textColor="@android:color/white"
                            android:checked="true"
                            android:layout_marginEnd="16dp" />

                        <RadioButton
                            android:id="@+id/rb_reconnecting_mode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="回连模式"
                            android:textColor="@android:color/white" />

                    </RadioGroup>

                </LinearLayout>

                <!-- 当前颜色显示 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="当前颜色："
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <View
                        android:id="@+id/view_current_color"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/color_circle_background" />

                    <TextView
                        android:id="@+id/tv_current_color_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="绿色"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

                <!-- 预设颜色网格 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预设颜色："
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_preset_colors"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp" />

                <!-- 自定义颜色输入 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自定义颜色："
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/et_custom_color"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:hint="#RRGGBB"
                        android:textColor="@android:color/white"
                        android:textColorHint="#888888"
                        android:background="@drawable/edit_text_background"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/btn_apply_custom_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应用"
                        android:textColor="@android:color/black"
                        android:background="@drawable/button_background" />

                </LinearLayout>

                <!-- 应用颜色按钮 -->
                <Button
                    android:id="@+id/btn_apply_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="应用颜色设置"
                    android:textColor="@android:color/black"
                    android:background="@drawable/primary_button_background"
                    android:padding="12dp" />

            </LinearLayout>


        <!-- 音效控制区域 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音效控制"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 音效开关 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="音效开关"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_music"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- 音效类型选择 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="音效类型选择："
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_music_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        <!-- 防误触控制区域 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="防误触控制"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- 防误触开关 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="防误触功能"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/switch_prevent_accidental"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开启后可避免设备意外触发"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

    </LinearLayout>

</ScrollView>
