<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/contentLayout"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/dialog_container"
        android:layout_width="1600px"
        android:layout_height="960px"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/dialog_container">

        <!--    相对布局-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160px">

            <ImageView
                android:id="@+id/link_back"
                android:layout_width="64px"
                android:layout_height="64px"
                android:layout_marginStart="48px"
                android:layout_marginTop="48px"
                android:background="@drawable/link_back" />

            <TextView
                android:id="@+id/title_center"
                android:layout_weight="1"
                android:layout_width="600px"
                android:layout_marginStart="500px"
                android:gravity="center"
                android:text="选择应用"
                android:textStyle="bold"
                android:textSize="40px"
                android:textColor="#ffffff"
                android:layout_height="match_parent"/>

        </RelativeLayout>

<!--        <androidx.core.widget.NestedScrollView-->
<!--                android:layout_width="1600px"-->
<!--                android:layout_height="800px"-->
<!--                android:layout_marginTop="160px"-->
<!--                android:overScrollMode="always"-->
<!--                android:fillViewport="true">-->

                <!-- 使用ViewPager2来承载不同选项卡的内容 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="1600px"
                    android:layout_height="800px"
                    android:layout_marginTop="160px"
                    android:id="@+id/viewPager"
                    />
<!--        </androidx.core.widget.NestedScrollView>-->
    </RelativeLayout>
</RelativeLayout>