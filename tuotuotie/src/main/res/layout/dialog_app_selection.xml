<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff000000">

    <RelativeLayout
        android:id="@+id/dialog_container"
        android:layout_width="1600px"
        android:layout_height="960px"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/dialog_container">

        <!--    相对布局-->
        <!--                <RelativeLayout-->
        <!--                    android:layout_width="match_parent"-->
        <!--                    android:layout_height="160px">-->

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="64px"
            android:layout_height="64px"
            android:layout_marginStart="48px"
            android:layout_marginTop="48px"
            android:background="@drawable/link_back" />

        <TextView
            android:id="@+id/title_center"
            android:layout_height="160px"
            android:layout_width="600px"
            android:layout_marginStart="500px"
            android:gravity="center"
            android:text="选择应用"
            android:textSize="40px"
            android:textColor="#ffffff"/>

        <!-- Fragment 容器 -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_container"
            android:layout_width="1600px"
            android:layout_height="800px"
            android:layout_marginTop="160px"
            android:overScrollMode="always"
            android:fillViewport="true"/>
    </RelativeLayout>

    <!-- 底部按钮栏（可选） -->
    <LinearLayout
        android:id="@+id/layout_bottom_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_color"
        android:gravity="end"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:enabled="false" />

    </LinearLayout>

</RelativeLayout>
